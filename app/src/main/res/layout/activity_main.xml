<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="?attr/colorOnPrimary" />

    <woowacourse.paint.CanvasView
        android:id="@+id/canvasView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/lineBrushButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/undoIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_undo"
        app:layout_constraintBottom_toTopOf="@id/lineBrushButton"
        app:layout_constraintStart_toStartOf="@id/lineBrushButton" />

    <ImageView
        android:id="@+id/redoIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_redo"
        app:layout_constraintBottom_toBottomOf="@id/undoIv"
        app:layout_constraintStart_toEndOf="@id/undoIv"
        app:layout_constraintTop_toTopOf="@id/undoIv" />

    <Button
        android:id="@+id/lineBrushButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/line_brush"
        app:layout_constraintBottom_toTopOf="@id/rangeSlider"
        app:layout_constraintEnd_toStartOf="@id/rectBrushButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/rectBrushButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rectangle_brush"
        app:layout_constraintBottom_toTopOf="@id/rangeSlider"
        app:layout_constraintEnd_toStartOf="@id/circleBrushButton"
        app:layout_constraintStart_toEndOf="@id/lineBrushButton" />

    <Button
        android:id="@+id/circleBrushButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/circle_brush"
        app:layout_constraintBottom_toTopOf="@id/rangeSlider"
        app:layout_constraintEnd_toStartOf="@id/eraserButton"
        app:layout_constraintStart_toEndOf="@id/rectBrushButton" />

    <Button
        android:id="@+id/eraserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eraser"
        app:layout_constraintBottom_toTopOf="@id/rangeSlider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/circleBrushButton" />


    <com.google.android.material.slider.RangeSlider
        android:id="@+id/rangeSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="100"
        app:layout_constraintBottom_toTopOf="@id/paletteView" />

    <woowacourse.paint.PaletteView
        android:id="@+id/paletteView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/spaceBottom" />

    <Space
        android:id="@+id/spaceBottom"
        android:layout_width="0dp"
        android:layout_height="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
